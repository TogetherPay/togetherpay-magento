<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <splitoffpayovertime>
                <active>0</active>
                <title>TogetherPay</title>
                <api_mode>sandbox</api_mode>
                <model>Splitoff\TogetherPay\Model\Payovertime</model>
                <payment_action>authorize_capture</payment_action>
                <merchant_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <allowspecific>1</allowspecific>
                <specificcountry>AU</specificcountry>
                <http_header_support>0</http_header_support>
                <enable_for_product_page>1</enable_for_product_page>
                <enable_for_cart_page>1</enable_for_cart_page>
            </splitoffpayovertime>
        </payment>
    </default>
</config>
